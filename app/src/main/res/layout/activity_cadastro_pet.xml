<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".CadastroPet">

    <TextView
        android:id="@+id/title_cadastro_pet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cadastro de Pet"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginTop="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/containerComponents"
        style="@style/ContainerComponents"
        app:layout_constraintTop_toBottomOf="@id/title_cadastro_pet"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/edit_nome_pet"
        style="@style/Edit_Text"
        android:hint="Nome do Pet"
        android:inputType="text"
        android:drawableRight="@drawable/ic_pet_name"
        app:layout_constraintTop_toTopOf="@id/containerComponents"
        app:layout_constraintStart_toStartOf="@id/containerComponents"
        app:layout_constraintEnd_toEndOf="@id/containerComponents" />

    <EditText
        android:id="@+id/edit_raca_pet"
        style="@style/Edit_Text"
        android:hint="RaÃ§a"
        android:inputType="text"
        android:drawableRight="@drawable/ic_pet_raca"
        app:layout_constraintTop_toBottomOf="@id/edit_nome_pet"
        app:layout_constraintStart_toStartOf="@id/containerComponents"
        app:layout_constraintEnd_toEndOf="@id/containerComponents" />

    <EditText
        android:id="@+id/edit_idade_pet"
        style="@style/Edit_Text"
        android:hint="Idade"
        android:inputType="number"
        android:drawableRight="@drawable/ic_pet_age"
        app:layout_constraintTop_toBottomOf="@id/edit_raca_pet"
        app:layout_constraintStart_toStartOf="@id/containerComponents"
        app:layout_constraintEnd_toEndOf="@id/containerComponents" />

    <Button
        android:id="@+id/button_choose_image"
        style="@style/Button"
        android:text="Escolher Imagem"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/edit_idade_pet"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/image_preview"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/button_choose_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:scaleType="centerCrop" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_cadastrar_pet"
        style="@style/Button"
        android:text="Cadastrar Pet"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/image_preview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="HardcodedText" />

</androidx.constraintlayout.widget.ConstraintLayout>
